<%= form_for [@quiz, @question], html: { class: "h-1/3 flex flex-col w-full space-y-2" } do |f| %>
  <%= f.text_field :question, class: "focus:outline-none bg-gray-200 focus:bg-gray-300 px-6 py-3 w-2/3", placeholder: '' %>
  <%= f.submit class: "px-6 py-3 cursor-pointer bg-gradient-to-r from-blue-400 to-blue-500" %>
<% end %>
